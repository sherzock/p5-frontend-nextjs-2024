generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Videogame {
  idVG             Int       @id @default(autoincrement())
  name         String
  description    String
  poster        String    // URL o ruta de la imagen de la portada
  grades          Float
  launcYear     Int
  developer  String
  totalAchievments Int
  infoPlayer   infoPlayer[]
}

model infoPlayer {
  idInfo             Int       @id @default(autoincrement())
  hoursPlayed          Int
  AchievementsUnlocked Int
  videogameId   Int
  videojuego     Videogame @relation(fields: [videogameId], references: [idVG])
}